//END CALCULATIONS
//

//      NEW SWING HIGH
if not na(swing_high2)

    //MANAGE SWING HIGH VALUES
    f_array_add_pop2(swing_high_values2, swing_high2)
    f_array_add_pop2(swing_high_bns2, bar_index[swing_length2])
    if show_price_action_labels2
        f_sh_sl_labels2(swing_high_values2, 1)

    f_supply_demand2(swing_high_values2, swing_high_bns2, current_supply_box2, current_supply_poi2, 1, atr2)

//      NEW SWING LOW
else if not na(swing_low2)

    //MANAGE SWING LOW VALUES
    f_array_add_pop2(swing_low_values2, swing_low2)
    f_array_add_pop2(swing_low_bns2, bar_index[swing_length2])
    if show_price_action_labels2
        f_sh_sl_labels2(swing_low_values2, -1)
    
    f_supply_demand2(swing_low_values2, swing_low_bns2, current_demand_box2, current_demand_poi2, -1, atr2)


f_sd_to_bos2(current_supply_box2, supply_bos2, current_supply_poi2, 1)
f_sd_to_bos2(current_demand_box2, demand_bos2, current_demand_poi2, -1)

f_extend_box_endpoint(current_supply_box2)
f_extend_box_endpoint(current_demand_box2)

//ZIG ZAG
h2 = ta.highest(high, swing_length2 * 2 + 1)
l2 = ta.lowest(low, swing_length2 * 2 + 1)
f_isMin2(len) =>
    l2 == low[len]
f_isMax2(len) =>
    h2 == high[len]

var dirUp2 = false
var lastLow2 = high * 100
var lastHigh2 = 0.0
var timeLow2 = bar_index
var timeHigh2 = bar_index
var line li2 = na

f_drawLine2() =>
    _li_color = show_zigzag2 ? zigzag_color2 : color.new(#ffffff,100)
    line.new(timeHigh2 - swing_length2, lastHigh2, timeLow2 - swing_length2, lastLow2, xloc.bar_index, color=_li_color, width=2)

if dirUp2
    if f_isMin2(swing_length2) and low[swing_length2] < lastLow2
        lastLow2 := low[swing_length2]
        timeLow2 := bar_index
        line.delete(li2)
        li2 := f_drawLine2()
        li2

    if f_isMax2(swing_length2) and high[swing_length2] > lastLow2
        lastHigh2 := high[swing_length2]
        timeHigh2 := bar_index
        dirUp2 := false
        li2 := f_drawLine2()
        li2

if not dirUp2
    if f_isMax2(swing_length2) and high[swing_length2] > lastHigh2
        lastHigh2 := high[swing_length2]
        timeHigh2 := bar_index
        line.delete(li2)
        li2 := f_drawLine2()
        li2
    if f_isMin2(swing_length2) and low[swing_length2] < lastHigh2
        lastLow2 := low[swing_length2]
        timeLow2 := bar_index
        dirUp2 := true
        li2 := f_drawLine2()
        if f_isMax2(swing_length2) and high[swing_length2] > lastLow2
            lastHigh2 := high[swing_length2]
            timeHigh2 := bar_index
            dirUp2 := false
            li2 := f_drawLine2()
            li2
