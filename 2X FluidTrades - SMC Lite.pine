//      ARRAYS FOR SUPPLY / DEMAND POI LABELS
var current_supply_poi2 = array.new_box(history_of_demand_to_keep2, na)
var current_demand_poi2 = array.new_box(history_of_demand_to_keep2, na)

//      ARRAYS FOR BOS
var supply_bos2 = array.new_box(5, na)
var demand_bos2 = array.new_box(5, na)
